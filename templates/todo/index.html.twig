{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<div class="panel panel-success">
    <div class="panel-heading">
        <a href="{{ path("todo_create") }}">Create</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Due Date</th>
        <th scope="col">Create Date</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for todo in todos %}
    <tr>
        <th scope="row">{{ todo.id }}</th>
        <td>{{ todo.name }}</td>
        <td>{{ todo.description }}</td>
        <td>{{ todo.category }}</td>
        <td>{{ todo.dueDate }}</td>
        <td>{{ todo.createDate | date('d-m-Y') }}</td>
        <td>
            <a href="{{ path('todo_view', {'id': todo.id}) }}" class="btn btn-success">View</a>
            <a href="{{ path('todo_edit', {'id': todo.id}) }}" class="btn btn-info">Edit</a>
            <a href="{{ path('todo_delete', {'id': todo.id}) }}" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}